<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.CS499.btsmith.uncover.detailed_view">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/neocacheBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/neocacheDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="26dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/neocacheOwner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Author"
                android:textSize="20dp"
                android:gravity="center"
                android:layout_margin="15dp"/>

            <TextView
                android:id="@+id/neocacheContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="20dp"
                android:gravity="center"
                android:padding="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/neocacheDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textSize="18dp"
                    android:layout_weight="1"
                    />

                <TextView
                    android:id="@+id/neocacheDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time Posted"
                    android:textSize="18dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/uncovers_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Lenny"
                android:gravity="center"
                android:textSize="20dp"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
